extends layouts/header-layout.pug 

block styles 
  link(rel="stylesheet", href="/css/shop.css")
block content 
  main.shop-main 
    if products.length > 0
      .grid
        each product in products
          article.card.product-item 
            header.card
              h1.product__title #{product.title}
            .card__image 
              img(src="https://img.freepik.com/free-photo/book-composition-with-open-book_23-2147690555.jpg", alt="Open book")
            .card__content 
              h2.product__price $19.99
              p.product__description A very interesting book that no one will ever read
            .card__actions
              button.btn Add to Cart
    else 
      h1 Sorry, no products available!