<% products.forEach(product => { %>
  <article class="product-item-inline">
    <div class="product-item-inline__image">
      <img 
        src="<%= product.image_url%>" 
        alt="A cat"
      >
    </div>

    <div class="product-item-inline__details">
      <div class="card__header">
        <div>
          <h1 class="product__title"><%= product.title%></h1>
        </div>
        <div>
        </div>
      </div>
      <div class="">
        <div class="card__content">
          <h2 class="product__price">R$ <%= product.price %></h2>
          <% if(path.match(new RegExp("^/products/.*"))) { %>
            <p class="product__description"><%= product.description %></p>
          <% }; %>
        </div>
        <div class="card__actions">
          <a class="btn" href="/products/<%= product.id %>">Details</a>
          <form action="/cart/delete-product" method="POST">
            <button class="btn" type="submit">Delete</button>
            <input type="hidden" name="productId" value="<%= product.id %>">
          </form>
        </div>
      </div>
    </div>
  </article>
<% }); %>
